{
    "name": "TopStories",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "android": "react-native run-android",
        "clean:android": "cd android && chmod +x ./gradlew && ./gradlew clean && ./gradlew assembleDebug; cd ..",
        "clean": "run-p clean:*",
        "clean:ios": "rm -rf ios/Pods; rm -rf ios/Podfile.lock; rm -rf ~/Library/Developer/Xcode/DerivedData; npx pod-install",
        "ios": "react-native run-ios",
        "ios:14": "react-native run-ios --simulator='iPhone 14'",
        "lint:fix": "eslint --fix ",
        "format": "prettier --write .",
        "lint": "eslint .",
        "start": "react-native start",
        "test": "jest",
        "prepare": "husky install"
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "^1.19.0",
        "@react-navigation/native": "^6.1.7",
        "@react-navigation/native-stack": "^6.9.13",
        "@reduxjs/toolkit": "^1.9.5",
        "axios": "^1.4.0",
        "react": "18.2.0",
        "react-native": "0.72.1",
        "react-native-bootsplash": "^4.7.4",
        "react-native-safe-area-context": "^4.6.4",
        "react-native-screens": "^3.22.0",
        "react-redux": "^8.1.1",
        "redux-logger": "^3.0.6",
        "redux-persist": "^6.0.0",
        "redux-saga": "^1.2.3"
    },
    "devDependencies": {
        "@babel/core": "^7.20.0",
        "@babel/preset-env": "^7.20.0",
        "@babel/runtime": "^7.20.0",
        "@react-native/eslint-config": "^0.72.2",
        "@react-native/metro-config": "^0.72.7",
        "@tsconfig/react-native": "^3.0.0",
        "@types/metro-config": "^0.76.3",
        "@types/react": "^18.0.24",
        "@types/react-redux": "^7.1.25",
        "@types/react-test-renderer": "^18.0.0",
        "@types/redux-logger": "^3.0.9",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "babel-jest": "^29.2.1",
        "babel-plugin-module-resolver": "^5.0.0",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-native": "^4.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.0",
        "jest": "^29.2.1",
        "lint-staged": "^13.2.3",
        "metro-react-native-babel-preset": "0.76.5",
        "prettier": "^2.4.1",
        "react-test-renderer": "18.2.0",
        "typescript": "4.8.4"
    },
    "lint-staged": {
        "*.+(js|jsx|ts|tsx)": [
            "eslint --cache --fix",
            "yarn lint:fix",
            "yarn format",
            "yarn lint"
        ],
        ".json": "yarn format"
    },
    "engines": {
        "node": ">=16"
    }
}
